{
  "compilerOptions": {
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "target": "es5",
    "module":"es2015",
    "lib": ["es2015", "es2016", "es2017", "es2019", "dom"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "dist/types",
    "outDir": "dist/lib",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "paths": {
    "react": [ "./node_modules/@types/react" ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/stories"
  ],
  "ts-node": {
    "esm": true, // «———— enabling ESM for ts-node   
  }, 
}
